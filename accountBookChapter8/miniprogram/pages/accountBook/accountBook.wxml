<!--pages/accountBook/accountBook.wxml-->
<view class="content">
<block wx:for="{{books}}" wx:key="item">
<view class="line"></view>
  <view class="item">
    <view class="name">
      <view>
        <image src="{{item.icon}}" style="width:50px;height:60px;"></image>
      </view>
      <view class="book">
        <view class="title">{{item.typeName}}</view>
        <view class="desc">{{item.name}}</view>
      </view>
    </view>
    <view class="count">
      共0笔账单
    </view>
  </view>
</block>
  
  
  <view class="line"></view>
  <view class="btn" bindtap="createBook">+ 创建记账本</view>
</view>